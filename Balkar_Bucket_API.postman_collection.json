              "host": ["{{base_url}}"],
              "path": ["buckets", ":id"],
              "variable": [{"key": "id", "value": ""}]
            }
          }
        },
        {
          "name": "Update Bucket",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"

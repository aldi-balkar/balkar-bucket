            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/buckets?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["buckets"],
